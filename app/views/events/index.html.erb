<p id="notice"><%= notice %></p>

<h1>Events</h1>
<br>

<h1>Future Events</h1>

<table style="width: 100%">
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render partial: 'event', collection: Event.upcoming, as: :event %>
  </tbody>
</table>

<h1>Past events</h1>

<table style="width: 100%">
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render partial: 'event', collection: Event.previous, as: :event %>
  </tbody>
</table>

<%= link_to 'New Event', new_event_path %>
