<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<h3>Events created by <%= @user.name %>: </h3>

<ul><%= render partial: "events/event", collection: @user.events, as: :event %></ul>


<h4>Upcoming events for <%= @user.name %>:</h4>
<ul><%= render partial: "events/event", collection: @events_upcoming, as: :event %></ul>

<hr>

<h4>Previous events for <%= @user.name %>:</h4>
<ul><%= render partial: "events/event", collection: @events_previous, as: :event %></ul>

<%= link_to 'Back', users_path %>
